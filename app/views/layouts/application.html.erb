  <%= csrf_meta_tags %>
</head>
<body>
    <%= render partial: 'layouts/header' if current_user%>
    <%= render partial: 'layouts/alerts' %>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
         <%= yield %>
          </div>
      </div>
    </div>
    <%= render partial: 'layouts/footer' %>

