<%= form_for(@room) do |f| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %> proibiu esta sala de ser salva:</h2>

      <ul>
      <% @room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Local:" %><br>
    <%= f.text_field :locale %>
  </div>
  <div class="field">
    <%= f.label "Capacidade:" %><br>
    <%= f.number_field :capacity %>
  </div>
  <div class="field">
    <%= f.label "É laboratório?" %><br>
    <%= f.check_box :lab %>
  </div>

  <div class="actions">
    <%= f.submit "Criar Sala", class: "btn btn-success" %>
  </div>
<% end %>
