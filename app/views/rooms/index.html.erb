<h1>Listing rooms</h1>

<table>
  <thead>
    <tr>
      <th>Identifier</th>
      <th>Locale</th>
      <th>Capacity</th>
      <th>Lab</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.identifier %></td>
        <td><%= room.locale %></td>
        <td><%= room.capacity %></td>
        <td><%= room.lab %></td>
        <td><%= link_to 'Mostrar', room %></td>
        <td><%= link_to 'Editar', edit_room_path(room) %></td>
        <td><%= link_to 'Deletar', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

