<%= form_for(@responsible) do |f| %>
  <% if @responsible.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@responsible.errors.count, "error") %> proibiu o salvamento deste responsável:</h2>

      <ul>
      <% @responsible.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Nome:" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "E-Mail:" %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label "Data de Nascimento:" %><br>
    <%= f.date_select :birth, :as => :date, :label=>"Data de Nascimento",:order => [:day, :month, :year], :start_year => (Date.current.year-18), :use_month_names => ["Janeiro", "Fevereiro", "Marco", "Abril", "Maio", "Junho", "Julho", "Agosto", "Setembro", "Outubro", "Novembro", "Dezembro"], :end_year => (Date.current.year-90), :class=>"form-control" %>
  </div>
  <div class="field">
    <%= f.label "Endereço:" %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label "Telefone:" %><br>
    <%= f.text_field :tel %>
  </div>
  <div class="actions">
    <%= f.submit "Criar Responsável", class: "btn btn-success" %>
  </div>
<% end %>
